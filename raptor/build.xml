		</move>
		<move toDir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources">
			<fileset dir="${install.dir}/Raptor_${version}/resources" />
		</move>
		<move toDir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/defaultHomeDir">
			<fileset dir="${install.dir}/Raptor_${version}/defaultHomeDir" />
		</move>
		<move toDir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/">
			<fileset file="${install.dir}/Raptor_${version}/Raptor.jar" />
		</move>

		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/raptor" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Chrisdesign" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Eyes" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Fantasy" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Portable" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Spacial" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/set/Wiki" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/sounds" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/resources/square" includes="**/*" perm="777" />
		<chmod dir="${install.dir}/Raptor_${version}/Raptor.app/Contents/MacOS/defaultHomeDir" includes="**/*" perm="777" />

		<exec executable="hdiutil">
			<arg value="create" />
			<arg value="-srcfolder" />
			<arg value="${install.dir}/Raptor_${version}/Raptor.app" />
			<arg value="${uploads.dir}/Raptor_${version}_OS_X_Carbon.dmg" />
		</exec>

		<exec executable="hdiutil">
			<arg value="internet-enable" />
			<arg value="-yes" />
			<arg value="${uploads.dir}/Raptor_${version}_OS_X_Carbon.dmg" />
		</exec>
	</target>

