		<mkdir dir="${install.dir}/Raptor_${version}/Raptor_${version}" />
		<move toDir="${install.dir}/Raptor_${version}/Raptor_${version}">
			<fileset dir="${install.dir}/Raptor_${version}/">
				<include name="**/*" />
			</fileset>
		</move>
		<delete dir="${install.dir}/Raptor_${version}/Raptor_${version}/Raptor_${version}" />

		<exec executable="hdiutil">
			<arg value="create" />
			<arg value="-srcfolder" />
			<arg value="${install.dir}/Raptor_${version}" />
			<arg value="${uploads.dir}/Raptor_${version}_OS_X_Cocoa_x86_64.dmg" />
		</exec>

		<exec executable="hdiutil">
